{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "./dist",
    "rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"types": ["@types/node"],
	},
	"lib": ["es2015"]
}