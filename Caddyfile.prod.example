# Caddyfile.prod
http://<ip or hostname> {
    # Redirect HTTP to HTTPS (когда добавите SSL)
    # redir https://{host}{uri}

    # Handle API requests
    handle /api/* {
        reverse_proxy http://back:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Serve static files
    root * /srv/front
    file_server
    
    # SPA fallback
    @notStatic {
        not file
        path /*
    }
    handle @notStatic {
        rewrite * /index.html
        file_server
    }
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
    }
}