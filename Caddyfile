# Caddyfile
:80 {
    # Обрабатываем API запросы первыми
    handle /api/* {
        # Проксируем на бэкенд, сохраняя путь /api/
        reverse_proxy http://back:3000 {
            # Убедимся, что путь передается правильно
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Затем обслуживаем статические файлы фронтенда
    root * /srv/front
    file_server
    
    # Fallback для SPA
    @notStatic {
        not file
        path /*
    }
    handle @notStatic {
        rewrite * /index.html
        file_server
    }
    
    # Логирование для отладки
    log {
        output stdout
        format console
    }
}